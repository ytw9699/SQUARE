<select id="selectEx" resultMap="modMemberes" parameterClass="string">
			SELECT * FROM modMember WHERE id = #id#
</select>
<!-- 회원특이사항 입력하기-->
  <insert id="inMemberEx" parameterClass="modMember">
      insert into modMember(id,ex) values(#id#,#ex#)
  </insert>
  
